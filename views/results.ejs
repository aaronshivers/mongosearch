<% include partials/top %>

<div id="homeContainer" class="container">
<%= pageCount %>
<%= paginate.hasNextPages(pageCount) %>
  <h1 class="text-center">Results List</h1>

  <div class="table-responsive-md">

    <table class="table">
      
      <thead class="table-dark">
        
        <tr>
          
          <th>Image</th>
          <th>Email</th>
          <th>First</th>
          <th>Last</th>
          <th>Title</th>
          <th>Description</th>
          <th>Area</th>
          <th>Type</th>
          <th>Address</th>
          <th>City</th>
          <th>State</th>
          <th>Zip</th>
          <th>Admin</th>

        </tr>

      </thead>

      <tbody>
        <% users.forEach((user) => { %>
        <tr>
          
          <th><img src="<%= user.avatar %>"></th>
          <th><a href="/users/<%= user._id %>/view"><%= user.email %></a></th>
          <th><%= user.firstName %></th>
          <th><%= user.lastName %></th>
          <th><%= user.jobTitle %></th>
          <th><%= user.jobDescriptor %></th>
          <th><%= user.jobArea %></th>
          <th><%= user.jobType %></th>
          <th><%= user.streetAddress %></th>
          <th><%= user.city %></th>
          <th><%= user.state %></th>
          <th><%= user.zipCode %></th>
          <th><%= user.admin %></th>

        </tr>
        <% }) %>
      </tbody>

    </table>

  </div>

  <% if (paginate.hasPreviousPages || paginate.hasNextPages(pageCount)) { %>
  <nav aria-label="Page navigation">
    
    <ul class="pagination justify-content-center">

      <% if (paginate.hasPreviousPages) { %>

      <li class="page-item"><a class="page-link" href="<%= paginate.href(true) %>">Previous</a></li>

      <% } %>

      <% if (pages) { %>

        <% pages.forEach((page) => { %>

        <li class="page-item"><a class="page-link" href="<%= page.url %>"><%= page.number %></a></li>

        <% }) %>

      <% } %>

      <% if (paginate.hasNextPages(pageCount)) { %>

      <li class="page-item"><a class="page-link" href="<%= paginate.href() %>">Next</a></li>

      <% } %>

    </ul>

  </nav>
  <% } %>

</div>

<% include partials/bottom %>
