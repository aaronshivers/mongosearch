<% include partials/top %>

<div id="homeContainer" class="container">

  <h1 class="text-center">Results List</h1>

    <div class="card-deck">

      <div class="row">

        <% users.forEach((user) => { %>

        <div class="col">

          <a href="/users/<%= user._id %>/view">

            <div class="card border-0">
              
              <img class="card-img-top rounded-circle mx-auto w-50" src="<%= user.avatar %>">

            <div class="card-body">
              
              <h5 class="card-title text-center"><%= user.firstName %> <%= user.lastName %></h5>

              <h6 class="text-dark text-center font-weight-normal"><%= user.jobTitle %></h6>

            </div>

          </div>

        </a>

      </div>
      <% }) %>

    </div>
      
  </div>

  <% if (paginate.hasPreviousPages || paginate.hasNextPages(pageCount)) { %>
  <nav aria-label="Page navigation">
    
    <ul class="pagination justify-content-center">

      <% if (paginate.hasPreviousPages) { %>

      <li class="page-item"><a class="page-link" href="<%= paginate.href(true) %>">Previous</a></li>

      <% } %>

      <% if (pages) { %>

        <% pages.forEach((page) => { %>

        <li class="page-item"><a class="page-link" href="<%= page.url %>"><%= page.number %></a></li>

        <% }) %>

      <% } %>

      <% if (paginate.hasNextPages(pageCount)) { %>

      <li class="page-item"><a class="page-link" href="<%= paginate.href() %>">Next</a></li>

      <% } %>

    </ul>

  </nav>
  <% } %>

</div>

<% include partials/bottom %>
